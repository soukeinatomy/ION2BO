{% block content %}
  <nav class="navbar navbar-expand-md navbar-light" id="nav">
    <div class="container-fluid">
      <a href="/" class="navbar-brand">mood</a>

      {% if loggedIn %}

        <a href="/mood" class="nav-link text-dark">
          Hi {{ username }}
        </a>
      {% endif %}
      <button
        class="navbar-toggler"
        type="button"
        data-bs-toggle="collapse"
        data-bs-target="#navbarNav"
        aria-controls="navbarNav"
        aria-expanded="false"
        aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarNav">
        {% if loggedIn %}
          <a href="/mood" class="nav-link text-dark">
            How is your mood today ?</a>
          <div class="d-flex justify-content-center flex-column w-100 text-center"></div>
          <a href="/auth/logout" class="nav-link text-dark">
            Log Out</a>
        {% else %}
          <a href="/auth/signup" class="nav-link text-dark">
            Sign Up
          </a>
          <a href="/auth/login" class="nav-link text-dark">
            Sign In
          </a>
        {% endif %}
      </div>
    </div>
  </nav>
{% endblock %}